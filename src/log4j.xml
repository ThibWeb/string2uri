<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
 
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
 
   <!-- Threshold to be set to OFF when deploying. -->
   <appender name="console" class="org.apache.log4j.ConsoleAppender">
      <param name="Threshold" value="DEBUG" />
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d{dd-MM-yyyy HH:mm:ss,SSS} %-5p - %c{1} - %m%n" />
      </layout>
   </appender>
 
   <appender name="dailyfile" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="Threshold" value="INFO" />
    <param name="File" value="./log/cablelink.log"/>
    <param name="DatePattern" value=".dd-MM-yyyy"/>
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%d{dd-MM-yyyy HH:mm:ss,SSS} %-5p - %c{1} - %m%n"/>
    </layout>
   </appender>
   
   <appender name="bugfile" class="org.apache.log4j.RollingFileAppender">
    <param name="Threshold" value="WARN" />
    <param name="File" value="./log/bugs.log" />
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%d{dd-MM-yyyy HH:mm:ss,SSS} %-5p - %c{1} - %m%n"/>
    </layout>
   </appender>

   <logger name="prototype.App" additivity="false" >   
      <level value="INFO" />
      <appender-ref ref="console"/>      
      <appender-ref ref="dailyfile"/>
      <appender-ref ref="bugfile"/>      
   </logger>
 
   <logger name="prototype.Jeu" additivity="false" >   
      <level value="INFO" />
      <appender-ref ref="console"/>      
      <appender-ref ref="dailyfile"/>   
      <appender-ref ref="bugfile"/>          
   </logger>
   
   <logger name="prototype.Liaison" additivity="false" >   
      <level value="INFO" />
      <appender-ref ref="console"/>      
      <appender-ref ref="dailyfile"/>
      <appender-ref ref="bugfile"/>          
   </logger>
   
   <logger name="prototype.To" additivity="false" >   
      <level value="INFO" />
      <appender-ref ref="console"/>      
      <appender-ref ref="dailyfile"/>
      <appender-ref ref="bugfile"/>          
   </logger>
   
   <!-- To shut up commons httpclient conflict with log4j. -->
   <logger name="org.apache.commons.httpclient" additivity="false" >   
      <level value="WARN" />
      <appender-ref ref="console"/>      
      <appender-ref ref="dailyfile"/>
      <appender-ref ref="bugfile"/>          
   </logger>
   
   <!-- To shut up commons httpclient conflict with log4j. -->
   <logger name="httpclient.wire" additivity="false" >   
      <level value="WARN" />
      <appender-ref ref="console"/>      
      <appender-ref ref="dailyfile"/>
      <appender-ref ref="bugfile"/>          
   </logger>
 
</log4j:configuration>